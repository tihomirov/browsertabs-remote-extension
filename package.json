{
	"private": true,
	"scripts": {
		"build": "parcel build src/manifest.json --no-content-hash --no-source-maps --dist-dir distribution --no-cache --detailed-report 0",
		"lint": "run-p lint:*",
		"lint-fix": "run-p 'lint:* -- --fix'",
		"lint:css": "stylelint src/**/*.css",
		"lint:js": "xo",
		"test": "run-p lint:* build",
		"watch": "parcel watch src/manifest.json --dist-dir distribution --no-cache --no-hmr"
	},
	"browserslist": [
		"last 1 Chrome version",
		"last 1 Firefox version"
	],
	"stylelint": {
		"extends": "stylelint-config-xo"
	},
	"dependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@parcel/config-webextension": "^2.6.2",
		"@types/chrome": "^0.0.237",
		"@types/react": "^18.2.6",
		"@types/react-dom": "^18.2.4",
		"buffer": "^6.0.3",
		"eslint": "^8.20.0",
		"npm-run-all": "^4.1.5",
		"parcel": "^2.6.2",
		"process": "^0.11.10",
		"stylelint": "^14.9.1",
		"stylelint-config-xo": "^0.21.0",
		"xo": "^0.50.0"
	},
	"webExt": {
		"sourceDir": "distribution",
		"run": {
			"startUrl": [
				"https://github.com/fregante/browser-extension-template"
			]
		}
	},
	"@parcel/bundler-default-bug": "https://github.com/parcel-bundler/parcel/issues/8071",
	"@parcel/bundler-default": {
		"minBundles": 10000000
	}
}
